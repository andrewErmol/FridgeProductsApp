@model Product

<div>
    <h3>Product</h3>

    <form class="get-form" asp-action="Get" method="post">
        <input class="simple-input" type="text" name="id" placeholder="Id"/>
        <button class="submit-btn" type="submit">Get</button>
    </form>  

    <p></p>
    <a class="back-btn" href="Index">Back</a>
    <p></p>

    @if (@Model != null)
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>DefaultQuantity</th>
                    <th>Image</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>@Model.Id</td>
                    <td>@Model.Name</td>
                    <td>@Model.DefaultQuantity</td>
                    <td>
                        <img class="product-img" src="@Model.Url" alt="@Model.Name">
                    </td>
                </tr>
            </tbody>
        </table>
    }

    @if (ViewData["Message"] != null)
    {
        <h5 style="color: red">@ViewData["Message"]</h5>
    }
</div>