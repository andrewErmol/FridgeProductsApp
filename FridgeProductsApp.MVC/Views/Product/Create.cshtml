@model ProductForCreationDto

<div>
    <h3>Create Product</h3>

    <form method="post" asp-action="Create">
        <div class="changing-field">
            <label asp-for="Name">Name</label>
            <div>
                <input class="simple-input" asp-for="Name"/>
                <span class="error-mes" asp-validation-for="Name"></span>
            </div>
        </div>

        <div class="changing-field">
            <label asp-for="DefaultQuantity">Default quantity</label>
            <div>
                <input class="simple-input" asp-for="DefaultQuantity"/>
                <span class="error-mes" asp-validation-for="DefaultQuantity"></span>
            </div>
        </div> 

        <button class="creation-btn" type="submit">Create</button>
    </form>

    <a class="back-btn" href="Index">Back</a>

    @if (ViewData["Message"] != null)
    {
        <h5>@ViewData["Message"]</h5>
    }
</div>